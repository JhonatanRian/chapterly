# Chapterly - Environment Variables Example
# Copy this file to .env and update with your values

# ============================================================================
# GENERAL
# ============================================================================
COMPOSE_PROJECT_NAME=chapterly
NODE_ENV=development

# ============================================================================
# DATABASE (PostgreSQL)
# ============================================================================
POSTGRES_DB=chapterly
POSTGRES_USER=chapterly
POSTGRES_PASSWORD=chapterly_dev_password

# For Django DATABASE_URL format
DATABASE_URL=postgresql://chapterly:chapterly_dev_password@db:5432/chapterly

# ============================================================================
# DJANGO BACKEND
# ============================================================================
DEBUG=True
SECRET_KEY=django-insecure-change-this-in-production-use-at-least-50-chars
ALLOWED_HOSTS=localhost,127.0.0.1,backend
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:80,http://localhost:3000

# Django Admin
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@chapterly.com
DJANGO_SUPERUSER_PASSWORD=admin123

# ============================================================================
# FRONTEND
# ============================================================================
VITE_API_BASE_URL=http://localhost:8000
VITE_APP_NAME=Chapterly

# ============================================================================
# DOCKER PORTS
# ============================================================================
FRONTEND_PORT=80
BACKEND_PORT=8000
DB_PORT=5432
NGINX_PORT=8080

# ============================================================================
# PRODUCTION SETTINGS (docker-compose.prod.yml)
# ============================================================================
# Uncomment and set these for production:

# DEBUG=False
# SECRET_KEY=your-super-secret-key-generate-with-django-get-secret-key
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# POSTGRES_PASSWORD=strong-postgres-password-here
# DATABASE_URL=postgresql://chapterly:strong-password@db:5432/chapterly

# ============================================================================
# OPTIONAL
# ============================================================================
# Email settings (for future use)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Sentry (for error tracking in production)
# SENTRY_DSN=your-sentry-dsn-here

# AWS S3 (for media files in production)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
